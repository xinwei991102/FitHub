    <TextView
        android:id="@+id/textViewMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/calendarViewCalendar"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textViewMonth"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:compactCalendarBackgroundColor="@android:color/background_light"
        app:compactCalendarCurrentDayBackgroundColor="@color/colorPrimaryDark"
        app:compactCalendarCurrentDayTextColor="#fff"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorAccent"
        app:compactCalendarCurrentSelectedDayTextColor="#fff"
        app:compactCalendarMultiEventIndicatorColor="@color/colorPrimary"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#000"
        app:compactCalendarTextSize="12sp" />

    <TextView
        android:id="@+id/textViewEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_below="@id/calendarViewCalendar"
        />

</RelativeLayout>