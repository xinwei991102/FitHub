<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="transparentButton">
        <item name="android:background">@null</item>
        <item name="android:strokeColor" tools:targetApi="lollipop">#FFFF</item>
        <item name="android:strokeWidth" tools:targetApi="lollipop">10</item>
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="loginText">
        <item name="android:textColor">#FFFF</item>
        <item name="android:editTextColor">#FFFF</item>
    </style>

    <style name="SignUpEditTextStyle">
        <item name="android:background">#e0dce7</item>
    </style>

    <style name="ExerciseButton">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">116dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="profileAlignRight">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">19dp</item>
        <item name="android:layout_marginEnd">19dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profileAlignLeft">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginStart">19dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="profileLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="blackText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="editProfileAlignLeft">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editProfileAlignRight">
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="signUpAlignLeft">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="signUpAlignRight">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
    </style>
</resources>
