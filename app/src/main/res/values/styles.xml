<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="transparentButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">#FFFF</item>
    </style>


    <style name="loginText">
        <item name="android:textColor">#FFFF</item>
        <item name="android:editTextColor">#FFFF</item>
    </style>

    <style name="ExerciseButton">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">116dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
